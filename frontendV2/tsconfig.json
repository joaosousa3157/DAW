{
    "compilerOptions": {
      "esModuleInterop": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2015", "es2017", "dom"],
      "removeComments": true,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./",
      "paths": {
        "components/*": ["src/components/*"],
        "images/*": ["src/images/*"],
      },
      "outDir": "./dist"
    },
    "include": ["src/*", "png.d.ts", "svg.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
